<p id="notice"><%= notice %></p>
<div class="container text-white-50">
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<br>
<br>
<%@post.comments.each do |comment| %>
  <%=comment.content %> <%=link_to '[delete]',
  post_comment_path(@post.id,comment.id), method: 'delete', class: "text-warning" %><br>
<% end%>
<br>
<%=form_for Comment.new, url:post_comments_path(@post.id) do |f| %>
<%=f.label "RE"%><br>
<%=f.text_field :content%>
<%=f.submit "UP"%>
<% end%>

<%= link_to 'Back', posts_path, class: "button text-white-50" %>
<br>
</div>