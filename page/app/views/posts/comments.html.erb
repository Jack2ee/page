<p id="notice"><%= notice %></p>

<div class="container">
<h1 class= "text-white-50">Comments</h1>

<table class="table table-hover">
  <thead class= "text-white-50">
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody >
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post,  class: "text-white-50"%></td>
        <td><%= link_to 'Edit', edit_post_path(post), class: "text-white-50" %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-white-50" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comments', new_post_path, class: "text-white-50" %>
</div>