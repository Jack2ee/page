<!DOCTYPE html>
<html>
  <head>
    <title>Secret</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>   
    <p class="alert"><%= alert %></p>
    
    <% if user_signed_in? %>
      <li class="nav-item nav-link bg-dark">
      <%= link_to('로그아웃', destroy_user_session_path, method: :delete, class: "text-white") %>        
      </li>
    <% else %>
      <li class="nav-item nav-link bg-dark">
      <%= link_to('로그인', new_user_session_path, class: "text-white" )  %>  
      </li>
      <li class="nav-item nav-link bg-dark">
      <%= link_to('회원가입', new_user_registration_path, class: "text-white")  %>
      </li>
    <% end %>
    <%= yield %>
  </body>
</html>
